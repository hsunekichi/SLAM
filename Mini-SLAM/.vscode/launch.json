{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Apps/mono_euroc",
            //"args": ["${workspaceFolder}/scenes/ajax/ajax-gold.xml"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",  // Path to GDB, adjust if necessary
            "preLaunchTask": "CMake: Build",
            "logging": {
                "trace": true,
                "engineLogging": true,
                "traceResponse": true
            }
        }
    ]
}
